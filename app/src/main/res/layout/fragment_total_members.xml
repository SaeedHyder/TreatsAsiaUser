<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg1"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_tier_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:layout_marginBottom="@dimen/x10"
        android:layout_marginEnd="@dimen/x20"
        android:layout_marginStart="@dimen/x20"
        android:layout_marginTop="@dimen/x10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/x15"
            android:layout_height="@dimen/x15"
            android:src="@drawable/credits_wallet" />

        <com.app.usertreatzasia.ui.views.AnyTextView
            app:typeface="Roboto-Regular.ttf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x10"
            android:layout_weight="1"
            android:text="@string/tier_1"
            android:textColor="@color/white"
            android:textSize="@dimen/x16" />

        <com.app.usertreatzasia.ui.views.AnyTextView
            android:id="@+id/tv_tier_1"
            app:typeface="Roboto-Regular.ttf"
            tools:text="AED 90"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textColor="@color/white"
            android:textSize="@dimen/x16" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:alpha="0.2"
        android:background="@color/white" />

    <LinearLayout
        android:id="@+id/ll_tier_2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:layout_marginBottom="@dimen/x10"
        android:layout_marginEnd="@dimen/x20"
        android:layout_marginStart="@dimen/x20"
        android:layout_marginTop="@dimen/x10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/x15"
            android:layout_height="@dimen/x15"
            android:src="@drawable/credits_wallet" />

        <com.app.usertreatzasia.ui.views.AnyTextView
            app:typeface="Roboto-Regular.ttf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x10"
            android:layout_weight="1"
            android:text="@string/tier_2"
            android:textColor="@color/white"
            android:textSize="@dimen/x16" />

        <com.app.usertreatzasia.ui.views.AnyTextView
            android:id="@+id/tv_tier_2"
            app:typeface="Roboto-Regular.ttf"
            tools:text="AED 90"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity="end"
            android:textColor="@color/white"
            android:textSize="@dimen/x16" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:alpha="0.2"
        android:background="@color/white" />

</LinearLayout>

