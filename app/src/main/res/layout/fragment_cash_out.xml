<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg1"
    android:onClick="onClick"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x20"
        android:background="@drawable/button_white">

        <com.app.usertreatzasia.ui.views.AnyEditTextView
            android:id="@+id/edt_enter_points"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:hint="@string/enter_credit_amount_cashout"
            android:paddingLeft="@dimen/x10"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="@dimen/x15"
            android:imeOptions="actionDone"
            app:testType="phone"
            android:inputType="phone"
            android:maxLength="20"
            android:maxLines="1"
            android:layout_gravity="center_vertical"
            app:typeface="Roboto-Regular.ttf"
            android:background="@null"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:alpha="0.3"
        android:background="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/x5"
        android:layout_marginBottom="@dimen/x5"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:orientation="horizontal">

        <com.app.usertreatzasia.ui.views.AnyTextView
            android:layout_width="0dp"
            android:layout_height="@dimen/x40"
            android:layout_weight="0.6"
            android:gravity="center_vertical"
            android:text="Current Credits Available"
            android:textColor="@color/white"
            android:textSize="@dimen/x17"
            app:typeface="Roboto-Regular.ttf" />

        <com.app.usertreatzasia.ui.views.AnyTextView
            android:id="@+id/tv_credits_available"
            android:layout_width="0dp"
            android:layout_height="@dimen/x40"
            android:layout_weight="0.3"
            android:gravity="end"
            tools:text="$100000"
            android:textColor="@color/white"
            android:textSize="@dimen/x17"
            app:typeface="Roboto-Regular.ttf" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:alpha="0.3"
        android:background="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/x5"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:orientation="horizontal">

        <com.app.usertreatzasia.ui.views.AnyTextView
            android:layout_width="0dp"
            android:layout_height="@dimen/x40"
            android:layout_weight="0.6"
            android:gravity="center_vertical"
            android:text="@string/current_points_cashout_available"
            android:textColor="@color/white"
            android:textSize="@dimen/x17"
            app:typeface="Roboto-Regular.ttf" />

        <com.app.usertreatzasia.ui.views.AnyTextView
            android:id="@+id/tv_points_available"
            android:layout_width="0dp"
            android:layout_height="@dimen/x40"
            android:layout_weight="0.3"
            android:gravity="end"
            tools:text="100000"
            android:textColor="@color/white"
            android:textSize="@dimen/x17"
            app:typeface="Roboto-Regular.ttf" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_top_up_points"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginTop="@dimen/x60"
        android:background="@drawable/button_golden"
        android:text="@string/proceed_btn"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/x18" />

    <Button
        android:id="@+id/btn_TandC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginTop="@dimen/x20"
        android:background="@drawable/button_golden"
        android:text="Terms and Conditions"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/x18"
        android:visibility="gone"/>

    <com.app.usertreatzasia.ui.views.AnyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x10"
        android:layout_marginStart="@dimen/x10"
        android:gravity="start"
        android:text="Terms And Conditions"
        android:textColor="@color/white"
        android:textSize="@dimen/x15"
        app:typeface="Roboto-Regular.ttf" />

    <com.app.usertreatzasia.ui.views.AnyTextView
        android:id="@+id/tv_t_c_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x5"
        android:layout_marginStart="@dimen/x10"
        android:layout_marginEnd="@dimen/x10"
        android:gravity="start"
        tools:text="@string/lorem_ipsum1"
        android:textColor="@color/white"
        android:textSize="@dimen/x11"
        app:typeface="Roboto-Regular.ttf" />

</LinearLayout>