<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg1"
    android:onClick="onClick"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/x40">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/x150"
                android:layout_marginBottom="@dimen/x10"
                android:layout_marginTop="@dimen/x40"
                android:src="@drawable/dollarcircle" />

            <com.app.usertreatzasia.ui.views.AnyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/x2"
                android:drawableLeft="@drawable/coinicon"
                android:drawablePadding="@dimen/x10"
                android:gravity="center"
                android:text="@string/points_available"
                android:textColor="@color/white"
                android:textSize="@dimen/x20"
                android:textStyle="bold"
                app:typeface="Roboto-Regular.ttf" />

            <com.app.usertreatzasia.ui.views.AnyTextView
                android:id="@+id/tv_points_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/x20"
                tools:text="500"
                android:textStyle="bold"
                app:typeface="Roboto-Regular.ttf" />

            <Button
                android:id="@+id/btn_top_up_points"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginRight="@dimen/x20"
                android:layout_marginTop="@dimen/x60"
                android:background="@drawable/button_golden"
                android:text="Top Up Points"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/x18"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0">

        <Button
            android:id="@+id/btn_view_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x20"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginTop="@dimen/x20"
            android:background="@drawable/button_white"
            android:text="View History"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/x18" />
    </RelativeLayout>
</LinearLayout>