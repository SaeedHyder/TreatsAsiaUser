<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="onClick"
    android:background="@drawable/bg1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/cb_latest_to_old"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Latest to old"
                android:layout_margin="@dimen/x15"
                android:padding="@dimen/x10"
                android:button="@drawable/selector_chkbox"
                android:textColor="@color/white"
                android:checked="true" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/grey"
                android:alpha="0.3"/>

            <RadioButton
                android:id="@+id/cb_old_to_latest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Old to latest"
                android:layout_margin="@dimen/x15"
                android:padding="@dimen/x10"
                android:button="@drawable/selector_chkbox"
                android:textColor="@color/white"
                android:checked="false"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/grey"
                android:alpha="0.3"/>

            <Button
                android:id="@+id/btnApply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_golden"
                android:text="@string/apply"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/x80"
                android:layout_marginLeft="@dimen/x25"
                android:layout_marginRight="@dimen/x25"
                android:textAllCaps="false"/>


        </RadioGroup>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent">

    </LinearLayout>

</LinearLayout>