<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundGray"
    android:orientation="vertical">

    <com.app.usertreatzasia.ui.views.AnyTextView
        android:id="@+id/tv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x10"
        android:drawableLeft="@drawable/location"
        android:drawablePadding="@dimen/x10"
        android:gravity="center_vertical"
        android:hint="@string/default_hint_text"
        android:imeOptions="actionDone"
        android:maxLength="99"
        android:maxLines="5"
        android:singleLine="false"
        android:text=""
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="@dimen/x16"
        android:visibility="gone"
        app:typeface="Roboto-Regular.ttf" />

    <com.app.usertreatzasia.ui.views.AnyTextView
        android:id="@+id/txt_homeHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x10"
        android:gravity="center"
        android:textSize="@dimen/x18"
        app:typeface="Roboto-Regular.ttf" />

    <com.app.usertreatzasia.ui.views.AnyTextView
        android:id="@+id/txt_no_data"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="0.9"
        android:gravity="center"
        android:text="@string/no_data"
        android:textColor="@color/dark_grey"
        android:textSize="@dimen/x15"
        android:visibility="gone"
        app:typeface="Roboto-Regular.ttf" />

    <ListView
        android:id="@+id/lv_home"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/x10"
        android:paddingTop="@dimen/x10"
        android:divider="@color/transparent"
        android:scrollbars="none"
        android:visibility="visible" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:alpha="0.4"
        android:background="@color/grey"/>

    <LinearLayout
        android:id="@+id/ll_sticky"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x50"
        android:elevation="@dimen/x3"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_flashSale"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/x3"
            android:layout_marginLeft="@dimen/x5"
            android:layout_marginRight="@dimen/x5"
            android:layout_marginTop="@dimen/x3"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_flashSale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/flashsale" />

            <com.app.usertreatzasia.ui.views.AnyTextView
                android:id="@+id/txt_flashSale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x4"
                android:gravity="center"
                android:text="Flash Sale"
                android:textSize="@dimen/x10"
                app:typeface="Roboto-Regular.ttf" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_Evoucher"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/x3"
            android:layout_marginLeft="@dimen/x5"
            android:layout_marginRight="@dimen/x5"
            android:layout_marginTop="@dimen/x3"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_eVoucher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/evoucher" />

            <com.app.usertreatzasia.ui.views.AnyTextView
                android:id="@+id/txt_evoucher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x4"
                android:gravity="center"
                android:text="@string/e_voucher"
                android:textColor="@color/appGolden"
                android:textSize="@dimen/x10"
                app:typeface="Roboto-Regular.ttf" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_events"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/x3"
            android:layout_marginLeft="@dimen/x5"
            android:layout_marginRight="@dimen/x5"
            android:layout_marginTop="@dimen/x3"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_events"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/events" />

            <com.app.usertreatzasia.ui.views.AnyTextView
                android:id="@+id/txt_events"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x4"
                android:gravity="center"
                android:text="@string/events"
                android:textSize="@dimen/x10"
                app:typeface="Roboto-Regular.ttf" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_Rewards"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/x3"
            android:layout_marginLeft="@dimen/x5"
            android:layout_marginRight="@dimen/x5"
            android:layout_marginTop="@dimen/x3"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_rewards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/rewards" />

            <com.app.usertreatzasia.ui.views.AnyTextView
                android:id="@+id/txt_rewards"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x4"
                android:gravity="center"
                android:text="@string/rewards"

                android:textSize="@dimen/x10"
                app:typeface="Roboto-Regular.ttf" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>