<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    android:onClick="onClick">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x20"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x30"
            android:layout_marginTop="@dimen/x20"
            android:orientation="vertical">

            <com.app.usertreatzasia.ui.views.AnyEditTextView
                android:id="@+id/edt_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x30"
                android:layout_marginBottom="@dimen/x10"
                android:layout_marginTop="@dimen/x10"
                android:background="@color/transparent"
                android:drawableLeft="@drawable/name"
                android:drawablePadding="@dimen/x10"
                android:gravity="center_vertical"
                android:hint="@string/enter_full_name"
                android:imeOptions="actionNext"
                android:inputType="textPersonName"
                android:maxLength="30"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="@dimen/x16"
                app:testType="personFullName"
                app:typeface="Roboto-Regular.ttf" />

            <com.app.usertreatzasia.ui.views.AnyEditTextView
                android:id="@+id/edt_email"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x30"
                android:layout_marginBottom="@dimen/x10"
                android:layout_marginTop="@dimen/x10"
                android:background="@color/transparent"
                android:drawableLeft="@drawable/email"
                android:drawablePadding="@dimen/x10"
                android:gravity="center_vertical"
                android:hint="@string/enter_email_address"
                android:imeOptions="actionDone"
                android:inputType="textEmailAddress"
                android:maxLength="40"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="@dimen/x16"
                app:testType="email"
                app:typeface="Roboto-Regular.ttf" />

            <com.app.usertreatzasia.ui.views.AnyEditTextView
                android:id="@+id/edt_number"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x30"
                android:layout_marginBottom="@dimen/x10"
                android:layout_marginTop="@dimen/x10"
                android:background="@color/transparent"
                android:drawableLeft="@drawable/phone"
                android:drawablePadding="@dimen/x10"
                android:gravity="center_vertical"
                android:hint="@string/enter_number"
                android:imeOptions="actionNext"
                android:inputType="phone"
                android:maxLength="30"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="@dimen/x16"
                app:testType="phone"
                app:typeface="Roboto-Regular.ttf" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.app.usertreatzasia.ui.views.AnyTextView
                    android:id="@+id/tv_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x10"
                    android:drawableLeft="@drawable/location"
                    android:drawablePadding="@dimen/x10"
                    android:gravity="center_vertical"
                    android:hint="@string/default_hint_text"
                    android:imeOptions="actionDone"
                    android:maxLines="5"
                    android:maxLength="99"
                    android:singleLine="false"
                    android:text=""
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="@dimen/x16"
                    app:typeface="Roboto-Regular.ttf" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btn_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginTop="@dimen/x20"
            android:background="@drawable/button_golden"
            android:text="@string/update"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/x18"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btn_view_point_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginTop="@dimen/x20"
            android:background="@drawable/button_white"
            android:text="View Point History"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/x18"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btn_view_credit_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x20"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginTop="@dimen/x20"
            android:background="@drawable/button_white"
            android:text="View Credit History"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/x18"
            android:visibility="gone"/>


        <com.app.usertreatzasia.ui.views.AnyTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/membership_info"
            android:textSize="@dimen/x20"
            android:layout_marginStart="@dimen/x20"
            android:layout_marginTop="@dimen/x10"
            android:layout_marginEnd="@dimen/x20"
            android:layout_marginBottom="@dimen/x10"
            app:typeface="Roboto-Regular.ttf"
            android:textColor="@color/appGolden"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:alpha="0.2"
            android:background="@color/white" />

        <LinearLayout
            android:id="@+id/ll_total_members"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x30"
            android:layout_marginBottom="@dimen/x10"
            android:layout_marginTop="@dimen/x10"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/x20"
            android:layout_marginEnd="@dimen/x20">

            <ImageView
                android:layout_width="@dimen/x15"
                android:layout_height="@dimen/x15"
                android:src="@drawable/name"/>

            <com.app.usertreatzasia.ui.views.AnyTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:layout_marginStart="@dimen/x10"
                android:text="@string/total_members"
                android:textColor="@color/white"
                android:textSize="@dimen/x16"
                app:typeface="Roboto-Regular.ttf" />

            <com.app.usertreatzasia.ui.views.AnyTextView
                android:id="@+id/tv_total_members"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:gravity="end"
                android:textColor="@color/white"
                android:textSize="@dimen/x16"
                app:typeface="Roboto-Regular.ttf" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:alpha="0.2"
            android:background="@color/white" />

        <LinearLayout
            android:id="@+id/ll_total_vouchers_purchased"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x30"
            android:layout_marginBottom="@dimen/x10"
            android:layout_marginTop="@dimen/x10"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/x20"
            android:layout_marginEnd="@dimen/x20">

            <ImageView
                android:layout_width="@dimen/x15"
                android:layout_height="@dimen/x15"
                android:src="@drawable/voucher_wallet"/>

            <com.app.usertreatzasia.ui.views.AnyTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:layout_marginStart="@dimen/x10"
                android:text="@string/total_vouchers_purchased"
                android:textColor="@color/white"
                android:textSize="@dimen/x16"
                app:typeface="Roboto-Regular.ttf"/>

            <com.app.usertreatzasia.ui.views.AnyTextView
                android:id="@+id/tv_total_vouchers_purchased"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:gravity="end"
                android:textColor="@color/white"
                android:textSize="@dimen/x16"
                app:typeface="Roboto-Regular.ttf" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:alpha="0.2"
            android:background="@color/white" />


        <LinearLayout
            android:id="@+id/ll_total_credits_spent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x30"
            android:layout_marginBottom="@dimen/x10"
            android:layout_marginTop="@dimen/x10"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/x20"
            android:layout_marginEnd="@dimen/x20"
            android:visibility="gone">

            <ImageView
                android:layout_width="@dimen/x15"
                android:layout_height="@dimen/x15"
                android:src="@drawable/credits_wallet"/>

            <com.app.usertreatzasia.ui.views.AnyTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:layout_marginStart="@dimen/x10"
                android:text="@string/total_credit_spent"
                android:textColor="@color/white"
                android:textSize="@dimen/x16"
                app:typeface="Roboto-Regular.ttf"/>

            <com.app.usertreatzasia.ui.views.AnyTextView
                android:id="@+id/tv_credit_spent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:gravity="end"
                android:textColor="@color/white"
                android:textSize="@dimen/x16"
                app:typeface="Roboto-Regular.ttf" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:alpha="0.2"
            android:background="@color/white"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/ll_total_credits_earned"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x30"
            android:layout_marginBottom="@dimen/x10"
            android:layout_marginTop="@dimen/x10"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_marginStart="@dimen/x20"
            android:layout_marginEnd="@dimen/x20">

            <ImageView
                android:layout_width="@dimen/x15"
                android:layout_height="@dimen/x15"
                android:src="@drawable/coin"/>

            <com.app.usertreatzasia.ui.views.AnyTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:layout_marginStart="@dimen/x10"
                android:text="@string/total_credit_earned_downline"
                android:textColor="@color/white"
                android:textSize="@dimen/x16"
                app:typeface="Roboto-Regular.ttf" />

            <com.app.usertreatzasia.ui.views.AnyTextView
                android:id="@+id/tv_credit_earned"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:gravity="end"
                android:textColor="@color/white"
                android:textSize="@dimen/x16"
                app:typeface="Roboto-Regular.ttf" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:alpha="0.2"
            android:visibility="gone"
            android:background="@color/white" />

        <LinearLayout
            android:id="@+id/ll_total_points_spent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x30"
            android:layout_marginBottom="@dimen/x10"
            android:layout_marginTop="@dimen/x10"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/x20"
            android:layout_marginEnd="@dimen/x20">

            <ImageView
                android:layout_width="@dimen/x15"
                android:layout_height="@dimen/x15"
                android:src="@drawable/points_wallet"/>

            <com.app.usertreatzasia.ui.views.AnyTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:layout_marginStart="@dimen/x10"
                android:text="@string/total_point_spent"
                android:textColor="@color/white"
                android:textSize="@dimen/x16"
                app:typeface="Roboto-Regular.ttf" />

            <com.app.usertreatzasia.ui.views.AnyTextView
                android:id="@+id/tv_points_spent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:gravity="end"
                android:textColor="@color/white"
                android:textSize="@dimen/x16"
                app:typeface="Roboto-Regular.ttf" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:alpha="0.2"
            android:background="@color/white" />

        <LinearLayout
            android:id="@+id/ll_total_points_earned"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x30"
            android:layout_marginBottom="@dimen/x10"
            android:layout_marginTop="@dimen/x10"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/x20"
            android:layout_marginEnd="@dimen/x20">

            <ImageView
                android:layout_width="@dimen/x15"
                android:layout_height="@dimen/x15"
                android:src="@drawable/coin"/>

            <com.app.usertreatzasia.ui.views.AnyTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="@string/total_point_earned"
                android:layout_marginStart="@dimen/x10"
                android:textColor="@color/white"
                android:textSize="@dimen/x16"
                app:typeface="Roboto-Regular.ttf" />

            <com.app.usertreatzasia.ui.views.AnyTextView
                android:id="@+id/tv_points_earned"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:gravity="end"
                android:textColor="@color/white"
                android:textSize="@dimen/x16"
                app:typeface="Roboto-Regular.ttf" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:alpha="0.2"
            android:background="@color/white"
            android:layout_marginBottom="@dimen/x20"/>

    </LinearLayout>

</ScrollView>