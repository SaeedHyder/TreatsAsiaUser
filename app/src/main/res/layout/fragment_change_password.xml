<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:onClick="onClick"
    android:layout_height="match_parent"
    android:background="@drawable/bg1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/x20"
        android:layout_marginBottom="@dimen/x20">

        <LinearLayout
            android:id="@+id/ll_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:layout_below="@+id/logo"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginBottom="@dimen/x5"
            android:layout_marginTop="@dimen/x15"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_emailIcon"
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x10"
                android:src="@drawable/pwd"
                android:layout_weight="0.005"/>

            <View
                android:layout_width="@dimen/x1"
                android:layout_height="@dimen/x25"
                android:background="@color/white"
                android:layout_marginLeft="@dimen/x10"
                android:layout_gravity="center"/>

            <com.app.usertreatzasia.ui.views.AnyEditTextView
                android:id="@+id/edt_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x12"
                android:layout_marginRight="@dimen/x20"
                android:layout_marginTop="@dimen/x2"
                android:background="@android:color/transparent"
                android:hint="@string/current_password"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:maxLength="35"
                android:maxLines="1"
                android:singleLine="true"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:textSize="@dimen/x14"
                app:testType="alphaNumeric"
                app:typeface="Roboto-Regular.ttf"
                android:layout_weight="0.8"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="@color/white"
            android:layout_marginTop="@dimen/x2"
            android:layout_marginBottom="@dimen/x2"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30"
            android:alpha="0.3"/>

        <LinearLayout
            android:id="@+id/ll_cfm_new_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginTop="@dimen/x5"
            android:layout_marginBottom="@dimen/x5"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x10"
                android:src="@drawable/pwd"
                android:layout_weight="0.005"/>

            <View
                android:layout_width="@dimen/x1"
                android:layout_height="@dimen/x25"
                android:background="@color/white"
                android:layout_marginLeft="@dimen/x10"
                android:layout_gravity="center"/>

            <com.app.usertreatzasia.ui.views.AnyEditTextView
                android:id="@+id/edt_new_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x12"
                android:layout_marginRight="@dimen/x20"
                android:layout_marginTop="@dimen/x2"
                android:background="@android:color/transparent"
                android:hint="@string/new_password"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:maxLength="35"
                android:maxLines="1"
                android:singleLine="true"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:textSize="@dimen/x14"
                app:testType="alphaNumeric"
                app:typeface="Roboto-Regular.ttf"
                android:layout_weight="0.8"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="@color/white"
            android:layout_marginTop="@dimen/x2"
            android:layout_marginBottom="@dimen/x2"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30"
            android:alpha="0.3"/>

        <LinearLayout
            android:id="@+id/ll_cfm_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginTop="@dimen/x5"
            android:layout_marginBottom="@dimen/x5"
            android:orientation="horizontal"
            android:layout_weight="0.005">

            <ImageView
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x10"
                android:src="@drawable/pwd" />

            <View
                android:layout_width="@dimen/x1"
                android:layout_height="@dimen/x25"
                android:background="@color/white"
                android:layout_marginLeft="@dimen/x10"
                android:layout_gravity="center"/>

            <com.app.usertreatzasia.ui.views.AnyEditTextView
                android:id="@+id/edt_cfm_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x12"
                android:layout_marginRight="@dimen/x20"
                android:layout_marginTop="@dimen/x2"
                android:background="@android:color/transparent"
                android:hint="@string/confirm_new_password"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:maxLength="35"
                android:maxLines="1"
                android:singleLine="true"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:textSize="@dimen/x14"
                app:testType="alphaNumeric"
                app:typeface="Roboto-Regular.ttf"
                android:layout_weight="0.8"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="@color/white"
            android:layout_marginTop="@dimen/x2"
            android:layout_marginBottom="@dimen/x2"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30"
            android:alpha="0.3"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x10"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:background="@drawable/button_golden"
        android:text="@string/update"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="@dimen/x18"/>
</LinearLayout>