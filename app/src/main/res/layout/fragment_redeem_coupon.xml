<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x190">

            <ImageView
                android:id="@+id/iv_couponImage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x190"
                android:background="@drawable/banner" />


            <com.app.usertreatzasia.ui.views.AnyTextView
                android:id="@+id/txt_paid_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="12dp"
                android:background="@drawable/shape"
                android:gravity="center"
                android:text="@string/cashback"
                android:paddingTop="@dimen/x10"
                android:paddingBottom="@dimen/x10"
                android:paddingStart="@dimen/x10"
                android:paddingEnd="@dimen/x15"
                android:textColor="@color/white"
                android:textSize="@dimen/x18"
                app:typeface="Roboto-Regular.ttf" />

        </RelativeLayout>

        <com.app.usertreatzasia.ui.views.AnyTextView
            android:id="@+id/txt_couponDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x5"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:layout_marginTop="@dimen/x10"
            android:alpha="0.8"
            android:gravity="center_vertical"
            android:text="Flat 20% off Quisque blandit venenatis"
            android:textColor="@color/black"
            android:textSize="@dimen/x18"
            app:typeface="Roboto-Regular.ttf" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x15"
            android:layout_marginLeft="@dimen/x10"

            android:layout_marginTop="@dimen/x3"
            android:orientation="horizontal">

            <com.app.usertreatzasia.ui.views.AnyTextView
                android:id="@+id/txtActualAmount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="left"
                android:text="$602"
                android:textSize="@dimen/x15"
                app:typeface="Roboto-Regular.ttf" />

            <com.app.usertreatzasia.ui.views.AnyTextView
                android:id="@+id/txtAfterDiscount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x10"
                android:alpha="0.8"
                android:gravity="left"
                android:text="$482"
                android:textColor="@color/black"
                android:textSize="@dimen/x15"
                app:typeface="Roboto-Regular.ttf" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"

            android:layout_marginBottom="@dimen/x15"
            android:alpha="0.1"
            android:background="@color/light_grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x10"
                    android:orientation="horizontal">



                    <ImageView
                        android:layout_width="@dimen/x15"
                        android:layout_height="@dimen/x15"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/time" />

                    <com.app.usertreatzasia.ui.views.AnyTextView
                        android:id="@+id/txt_expire_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x5"
                        android:gravity="center_vertical"
                        android:text="Expires On: June 25 2017"
                        android:textSize="@dimen/x13"
                        app:typeface="Roboto-Regular.ttf" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x10"

                    android:layout_marginTop="@dimen/x3"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/x15"
                        android:layout_height="@dimen/x15"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/address" />

                    <com.app.usertreatzasia.ui.views.AnyTextView
                        android:id="@+id/txt_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x5"
                        android:gravity="center_vertical"
                        android:text="4100 Federal Blvd Road "
                        android:textSize="@dimen/x13"
                        app:typeface="Roboto-Regular.ttf" />

                </LinearLayout>
            </LinearLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <com.app.usertreatzasia.ui.views.AnyTextView
                    android:id="@+id/txt_remaining_qty"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/x35"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginEnd="@dimen/x20"
                    android:background="@drawable/button_black"
                    android:gravity="center_vertical"
                    android:paddingEnd="@dimen/x7"
                    android:paddingStart="@dimen/x7"
                    android:text="Remaining Qty 10"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/s15"
                    app:typeface="Roboto-Regular.ttf" />
            </FrameLayout>
        </LinearLayout>

        <!--  <View
              android:layout_width="match_parent"
              android:layout_height="@dimen/x1"
              android:layout_marginBottom="@dimen/x5"
              android:layout_marginTop="@dimen/x5"
              android:alpha="0.1"
              android:background="@color/black" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x150"
            android:layout_marginBottom="@dimen/x10"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/x10">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginTop="@dimen/x5"
                android:layout_marginBottom="@dimen/x15"
                android:alpha="0.1"
                android:background="@color/light_grey" />

            <ImageView
                android:id="@+id/img_barcode"
                android:layout_width="@dimen/x100"
                android:layout_height="@dimen/x100"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/code" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginTop="@dimen/x15"
                android:layout_marginBottom="@dimen/x15"
                android:alpha="0.1"
                android:background="@color/light_grey" />
        </LinearLayout>

        <!-- <View
             android:layout_width="match_parent"
             android:layout_height="@dimen/x1"
             android:layout_marginBottom="@dimen/x5"
             android:layout_marginTop="@dimen/x5"
             android:alpha="0.1"
             android:background="@color/black" />-->


        <com.app.usertreatzasia.ui.views.AnyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:alpha="0.8"
            android:gravity="center_vertical"
            android:text="@string/terms_and_conditions"
            android:textColor="@color/black"
            android:textSize="@dimen/x16"
            app:typeface="Roboto-Regular.ttf" />

        <com.app.usertreatzasia.ui.views.AnyTextView
            android:id="@+id/txt_termsDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:gravity="center_vertical"
            android:text="@string/lorem_ipsum1"
            android:textSize="@dimen/x14"
            app:typeface="Roboto-Regular.ttf" />


    </LinearLayout>
</ScrollView>