<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/llMainFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x190">

            <ImageView
                android:id="@+id/iv_couponImage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x190"
                android:scaleType="fitXY" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x25"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="12dp"
                android:background="@drawable/shape"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <com.app.usertreatzasia.ui.views.AnyTextView
                    android:id="@+id/txt_paid_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x5"
                    android:layout_marginRight="@dimen/x14"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/x14"
                    app:typeface="Roboto-Regular.ttf"
                    tools:text="Cash Voucher" />
            </LinearLayout>

        </RelativeLayout>

        <com.app.usertreatzasia.ui.views.AnyTextView
            android:id="@+id/txt_couponDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x5"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:layout_marginTop="@dimen/x10"
            android:alpha="0.8"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="@dimen/x18"
            app:typeface="Roboto-Regular.ttf"
            tools:text="" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x15"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginTop="@dimen/x3"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="horizontal">

                <com.app.usertreatzasia.ui.views.AnyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:text="@string/price"
                    android:textSize="@dimen/x12"
                    app:typeface="Roboto-Regular.ttf" />

                <com.app.usertreatzasia.ui.views.AnyTextView
                    android:id="@+id/txtAfterDiscount"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/x5"
                    android:alpha="0.8"
                    android:gravity="left"
                    android:textColor="@color/black"
                    android:textSize="@dimen/x12"
                    app:typeface="Roboto-Regular.ttf"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_amount_points"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginEnd="@dimen/x10"
                android:layout_weight="0.5"
                android:gravity="right"
                android:orientation="horizontal">

                <com.app.usertreatzasia.ui.views.AnyTextView
                    android:id="@+id/txtPointsAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginLeft="@dimen/x10"
                    android:alpha="0.8"
                    android:gravity="right"
                    android:textColor="@color/appGolden"
                    android:textSize="@dimen/x15"
                    app:typeface="Roboto-Regular.ttf" />

                <com.app.usertreatzasia.ui.views.AnyTextView
                    android:id="@+id/txtPoints"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/x10"
                    android:alpha="0.8"
                    android:text="Points"
                    android:textColor="@color/light_grey"
                    android:textSize="@dimen/x15"
                    app:typeface="Roboto-Regular.ttf" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_promo_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x5"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:orientation="horizontal"
            android:visibility="gone">

            <com.app.usertreatzasia.ui.views.AnyTextView
                android:id="@+id/tv_promo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/x4"
                android:gravity="center_vertical"
                android:text="@string/promo"
                android:textColor="@color/light_grey"
                android:textSize="@dimen/x15"
                app:typeface="Roboto-Regular.ttf" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x4"
                android:background="@drawable/rectangle_promo"
                android:orientation="vertical">

                <com.app.usertreatzasia.ui.views.AnyTextView
                    android:id="@+id/tv_promo_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x2"
                    android:layout_marginRight="@dimen/x2"
                    android:padding="@dimen/x2"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/x13"
                    app:typeface="Roboto-Regular.ttf" />

            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginBottom="@dimen/x25"
            android:alpha="0.1"
            android:background="@color/light_grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x10"

                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/x15"
                        android:layout_height="@dimen/x15"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/time" />

                    <com.app.usertreatzasia.ui.views.AnyTextView
                        android:id="@+id/txt_expire_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x5"
                        android:gravity="center_vertical"
                        android:text="@string/expires_on_detail"
                        android:textSize="@dimen/x13"
                        app:typeface="Roboto-Regular.ttf" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x10"

                    android:layout_marginTop="@dimen/x3"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/x15"
                        android:layout_height="@dimen/x15"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/address" />

                    <com.app.usertreatzasia.ui.views.AnyTextView
                        android:id="@+id/txt_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x5"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/x13"
                        app:typeface="Roboto-Regular.ttf" />

                </LinearLayout>
            </LinearLayout>

            <!--            <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <com.app.usertreatzasia.ui.views.AnyTextView
                                android:id="@+id/txt_remaining_qty"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/x35"
                                android:layout_gravity="center_vertical|end"
                                android:layout_marginEnd="@dimen/x20"
                                android:background="@drawable/button_black"
                                android:gravity="center_vertical"
                                android:paddingEnd="@dimen/x7"
                                android:paddingStart="@dimen/x7"
                                android:text="@string/remaining_qty"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="@dimen/s15"
                                app:typeface="Roboto-Regular.ttf" />
                        </FrameLayout>-->
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginBottom="@dimen/x20"
            android:layout_marginTop="@dimen/x20"
            android:alpha="0.1"
            android:background="@color/light_grey"
            android:visibility="visible" />


        <ImageView
            android:id="@+id/img_barcode"
            android:layout_width="@dimen/x120"
            android:layout_height="@dimen/x120"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/x20"
            android:scaleType="fitXY"
            android:src="@drawable/code"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x20"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:background="@drawable/button_golden"
            android:text="@string/cancel"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/x18"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_redeem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x20"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:background="@drawable/button_golden"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/x18"
            android:visibility="visible"
            tools:text="Tap to Redeem" />

        <Button
            android:id="@+id/btn_website_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x20"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:background="@drawable/button_golden"
            android:text="Visit Promotional Website"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/x18"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_gift"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x20"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:background="@drawable/btn_black"
            android:text="Gift"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/x18"
            android:visibility="visible" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginBottom="@dimen/x15"
            android:alpha="0.1"
            android:background="@color/light_grey" />


        <com.app.usertreatzasia.ui.views.AnyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:alpha="0.8"
            android:gravity="center_vertical"
            android:text="@string/terms_and_conditions"
            android:textColor="@color/black"
            android:textSize="@dimen/x16"
            app:typeface="Roboto-Regular.ttf" />

        <com.app.usertreatzasia.ui.views.AnyTextView
            android:id="@+id/txt_termsDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x10"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:layout_marginTop="@dimen/x2"
            android:gravity="center_vertical"
            android:textSize="@dimen/x14"
            app:typeface="Roboto-Regular.ttf" />


    </LinearLayout>
</ScrollView>