<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/x20"
        android:background="@drawable/bg">

        <com.app.usertreatzasia.ui.views.AnyTextView
            android:id="@+id/txtHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x50"
            android:gravity="center"
            android:text="@string/regular"
            android:textColor="@color/white"
            android:textSize="@dimen/x40"
            android:textStyle="bold"
            app:typeface="Roboto-Regular.ttf" />

        <com.app.usertreatzasia.ui.views.AnyTextView
            android:id="@+id/txtSubHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtHeading"
            android:alpha="0.8"
            android:gravity="center"
            android:text="@string/members"
            android:textColor="@color/white"
            android:textSize="@dimen/x30"
            app:typeface="Roboto-Regular.ttf" />

        <com.app.usertreatzasia.ui.views.AnyTextView
            android:id="@+id/txt_bullet_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtSubHeading"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:layout_marginTop="@dimen/x25"
            android:drawableLeft="@drawable/circle"
            android:drawablePadding="@dimen/x10"
            android:gravity="start"
            android:text="@string/over_ride_commission_on_members_n_3_configurable"
            android:textColor="@color/light_grey"
            android:textSize="@dimen/x15"
            app:typeface="Roboto-Regular.ttf" />

        <com.app.usertreatzasia.ui.views.AnyTextView
            android:id="@+id/txt_bullet_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_bullet_1"

            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:layout_marginTop="@dimen/x10"
            android:drawableLeft="@drawable/circle"
            android:drawablePadding="@dimen/x10"
            android:gravity="start"
            android:text="@string/to_get_rewards_kind_of_lucky_draw_concept_chances"
            android:textColor="@color/light_grey"
            android:textSize="@dimen/x15"
            app:typeface="Roboto-Regular.ttf" />

        <com.app.usertreatzasia.ui.views.AnyTextView
            android:id="@+id/txt_bullet_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_bullet_2"
            android:layout_marginBottom="@dimen/x30"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:layout_marginTop="@dimen/x10"
            android:drawableLeft="@drawable/circle"
            android:drawablePadding="@dimen/x10"
            android:gravity="start"
            android:text="@string/higher_referrel_fee_when_refer_to_a_member_ngive_pre_define_vouchers_to_member"
            android:textColor="@color/light_grey"
            android:textSize="@dimen/x15"
            app:typeface="Roboto-Regular.ttf" />

        <Space
            android:layout_below="@+id/txt_bullet_3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x10"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/box"
        android:layout_below="@+id/relativeLayout"
        android:gravity="center"
        android:layout_marginTop="@dimen/x45_"
        android:orientation="horizontal">

        <com.app.usertreatzasia.ui.views.AnyTextView
            android:id="@+id/txt_currency"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x4"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginRight="@dimen/x5"
            android:layout_marginTop="@dimen/x5"
            android:layout_weight="0.5"
            android:gravity="end"
            android:text="@string/sgh"
            android:textColor="@color/light_grey"
            android:textSize="@dimen/x18"
            app:typeface="Roboto-Regular.ttf" />

        <com.app.usertreatzasia.ui.views.AnyTextView
            android:id="@+id/txt_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x4"
            android:layout_marginLeft="@dimen/x5"
            android:layout_marginRight="@dimen/x10"
            android:layout_marginTop="@dimen/x5"
            android:layout_weight="0.5"
            android:gravity="left"
            android:text="@string/_300"
            android:textColor="@color/black"
            android:textSize="@dimen/x18"
            android:textStyle="bold"
            app:typeface="Roboto-Regular.ttf" />

    </LinearLayout>

</RelativeLayout>
