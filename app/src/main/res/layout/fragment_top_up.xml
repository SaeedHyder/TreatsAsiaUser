<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    android:onClick="onClick"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x20"
        android:background="@drawable/button_white"
        android:visibility="visible">

        <com.app.usertreatzasia.ui.views.AnyEditTextView
            android:id="@+id/edt_enter_points"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:background="@null"
            android:hint="@string/enter_points_to_purchase"
            android:paddingLeft="@dimen/x10"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="@dimen/x15"
            app:typeface="Roboto-Regular.ttf" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:alpha="0.3"
        android:background="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:orientation="horizontal">

        <com.app.usertreatzasia.ui.views.AnyTextView
            android:layout_width="0dp"
            android:layout_height="@dimen/x40"
            android:layout_weight="0.6"
            android:gravity="center_vertical"
            android:text="@string/current_points_available"
            android:textColor="@color/white"
            android:textSize="@dimen/x17"
            app:typeface="Roboto-Regular.ttf" />

        <com.app.usertreatzasia.ui.views.AnyTextView
            android:id="@+id/tv_points_available"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:gravity="end"
            android:textColor="@color/white"
            android:textSize="@dimen/x17"
            app:typeface="Roboto-Regular.ttf" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:alpha="0.3"
        android:background="@color/white" />

    <Button
        android:id="@+id/btn_top_up_points"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginTop="@dimen/x60"
        android:background="@drawable/button_golden"
        android:text="@string/proceed_btn"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/x18" />

    <Button
        android:id="@+id/btn_TandC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginTop="@dimen/x20"
        android:background="@drawable/button_golden"
        android:text="Terms and Conditions"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/x18" />

</LinearLayout>