<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/x40"
            android:background="@drawable/logo2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/x20"
            android:background="@drawable/box_signup"
            android:orientation="vertical">

            <com.app.usertreatzasia.ui.views.AnyEditTextView
                android:id="@+id/edt_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x30"
                android:layout_marginBottom="@dimen/x5"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginRight="@dimen/x10"
                android:layout_marginTop="@dimen/x20"
                android:background="@color/transparent"
                android:drawableLeft="@drawable/namne"
                android:drawablePadding="@dimen/x10"
                android:gravity="center_vertical"
                android:hint="@string/full_name_Passport"
                android:imeOptions="actionNext"
                android:inputType="textPersonName"
                android:maxLength="30"
                android:maxLines="1"
                android:textColor="@color/light_grey"
                android:textColorHint="@color/light_grey"
                android:textSize="@dimen/x16"
                app:testType="personFullName"
                app:typeface="Roboto-Regular.ttf" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginBottom="@dimen/x5"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginRight="@dimen/x20"
                android:layout_marginTop="@dimen/x5"
                android:background="@drawable/dotted_line" />

            <com.app.usertreatzasia.ui.views.AnyEditTextView
                android:id="@+id/edt_email"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x30"
                android:layout_marginBottom="@dimen/x5"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginRight="@dimen/x10"
                android:layout_marginTop="@dimen/x10"
                android:background="@color/transparent"
                android:drawableLeft="@drawable/email"
                android:drawablePadding="@dimen/x10"
                android:gravity="center_vertical"
                android:hint="@string/email"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:maxLength="30"
                android:maxLines="1"
                android:textColor="@color/light_grey"
                android:textColorHint="@color/light_grey"
                android:textSize="@dimen/x16"
                app:testType="email"
                app:typeface="Roboto-Regular.ttf" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginBottom="@dimen/x5"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginRight="@dimen/x20"
                android:layout_marginTop="@dimen/x5"
                android:background="@drawable/dotted_line" />

            <com.app.usertreatzasia.ui.views.AnyEditTextView
                android:id="@+id/edt_referal_code"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x30"
                android:layout_marginBottom="@dimen/x5"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginRight="@dimen/x10"
                android:layout_marginTop="@dimen/x10"
                android:background="@color/transparent"
                android:drawableLeft="@drawable/referral"
                android:drawablePadding="@dimen/x10"
                android:gravity="center_vertical"
                android:hint="@string/enter_referral_code"
                android:imeOptions="actionNext"
                android:inputType="textNoSuggestions"
                android:maxLength="30"
                android:maxLines="1"
                android:textColor="@color/light_grey"
                android:textColorHint="@color/light_grey"
                android:textSize="@dimen/x16"
                app:typeface="Roboto-Regular.ttf" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginBottom="@dimen/x5"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginRight="@dimen/x20"
                android:layout_marginTop="@dimen/x5"
                android:background="@drawable/dotted_line"/>

            <com.app.usertreatzasia.ui.views.AnyEditTextView
                android:id="@+id/edt_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x30"
                android:layout_marginBottom="@dimen/x5"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginRight="@dimen/x10"
                android:layout_marginTop="@dimen/x10"
                android:background="@color/transparent"
                android:drawableLeft="@drawable/pwd"
                android:drawablePadding="@dimen/x10"
                android:gravity="center_vertical"
                android:hint="@string/password"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:maxLength="35"
                android:maxLines="1"
                android:textColor="@color/light_grey"
                android:textColorHint="@color/light_grey"
                android:textSize="@dimen/x16"
                app:testType="alphaNumeric"
                app:typeface="Roboto-Regular.ttf" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginBottom="@dimen/x5"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginRight="@dimen/x20"
                android:layout_marginTop="@dimen/x5"
                android:background="@drawable/dotted_line"/>

            <com.app.usertreatzasia.ui.views.AnyEditTextView
                android:id="@+id/edt_cfm_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x30"
                android:layout_marginBottom="@dimen/x20"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginRight="@dimen/x10"
                android:layout_marginTop="@dimen/x10"
                android:background="@color/transparent"
                android:drawableLeft="@drawable/pwd"
                android:drawablePadding="@dimen/x10"
                android:gravity="center_vertical"
                android:hint="@string/confirm_password"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:maxLength="35"
                android:maxLines="1"
                android:textColor="@color/light_grey"
                android:textColorHint="@color/light_grey"
                android:textSize="@dimen/x16"
                app:testType="alphaNumeric"
                app:typeface="Roboto-Regular.ttf" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginBottom="@dimen/x20"
            android:background="@drawable/button_golden"
            android:text="@string/next"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/x18" />

    </LinearLayout>

</ScrollView>
